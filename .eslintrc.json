{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    "arrow-body-style": ["error", "as-needed"],
    "no-trailing-spaces": ["error", {
      "skipBlankLines": false
    }],
    "prettier/prettier": [
      "error",
      {
        "arrowParens": "avoid",
        "bracketSameLine": true,
        "bracketSpacing": true,
        "endOfLine": "lf",
        "printWidth": 120,
        "semi": false,
        "singleQuote": true,
        "tabWidth": 2,
        "trailingComma": "none",
        "trailing": "none"
      }
    ]
  },
  "plugins": [
    "prettier"
  ]
}